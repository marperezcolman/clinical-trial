definition
	EVALUATION[at0000] matches {    -- Clinical trial
		protocol matches {
			ITEM_TREE matches {
				items cardinality matches {0..*; unordered} matches {
					allow_archetype CLUSTER[at0003] occurrences matches {0..*} matches {    -- Informed consent
						include
							archetype_id/value matches {/.*|openEHR-EHR-CLUSTER\.consent_details\.v0/}
					}
					ELEMENT[at0015] occurrences matches {0..1} matches {*}    -- Informed consent (link it to openEHR-EHR-ACTION.informed_consent.v0)
					ELEMENT[at0011] occurrences matches {0..1} matches {    -- Date started
						value matches {
							DV_DATE matches {*}
						}
					}
					ELEMENT[at0012] occurrences matches {0..1} matches {    -- Date finished
						value matches {
							DV_DATE matches {*}
						}
					}
					ELEMENT[at0013] occurrences matches {0..*} matches {    -- Follow up dates
						value matches {
							DV_DATE matches {*}
						}
					}
				}
			}
		}
		data matches {
			ITEM_TREE matches {
				items cardinality matches {0..*; unordered} matches {
					CLUSTER[at0029] occurrences matches {0..1} matches {    -- Trial specifications
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0030] occurrences matches {0..1} matches {    -- Study number
								value matches {
									DV_IDENTIFIER matches {*}
								}
							}
							ELEMENT[at0031] occurrences matches {0..1} matches {    -- IRAS number
								value matches {
									DV_IDENTIFIER matches {*}
								}
							}
							ELEMENT[at0032] occurrences matches {0..1} matches {    -- Trial name/acronym
								value matches {
									DV_TEXT matches {*}
								}
							}
						}
					}
					CLUSTER[at0025] occurrences matches {0..1} matches {    -- Organisation
						items cardinality matches {1..*; unordered} matches {
							allow_archetype CLUSTER[at0026] occurrences matches {0..*} matches {    -- Referring organisation
								include
									archetype_id/value matches {/.*|openEHR-EHR-CLUSTER\.organisation\.v1/}
							}
							allow_archetype CLUSTER[at0027] occurrences matches {0..*} matches {    -- Treating organisation
								include
									archetype_id/value matches {/.*|openEHR-EHR-CLUSTER\.organisation\.v1/}
							}
						}
					}
					CLUSTER[at0017] occurrences matches {0..1} matches {    -- Trial protocol
						items cardinality matches {1..*; unordered} matches {
							ELEMENT[at0040] occurrences matches {0..1} matches {    -- Treatment type(s)
								value matches {
									DV_CODED_TEXT matches {*}
								}
							}
							CLUSTER[at0041] occurrences matches {0..1} matches {    -- Specific description
								items cardinality matches {1..*; unordered} matches {
									allow_archetype ELEMENT[at0019] occurrences matches {0..*} matches {    -- Trial medication (incl chemotherapy)
										include
											archetype_id/value matches {/.*/}
									}
									allow_archetype CLUSTER[at0023] occurrences matches {0..*} matches {    -- Trial procedure (as cluster)
										include
											archetype_id/value matches {/.*/}
									}
									allow_archetype ELEMENT[at0035] occurrences matches {0..1} matches {    -- Trial procedure (as Element)
										include
											archetype_id/value matches {/.*/}
									}
									allow_archetype CLUSTER[at0024] occurrences matches {0..*} matches {    -- Trial radiation treatment
										include
											archetype_id/value matches {/.*/}
									}
								}
							}
							allow_archetype CLUSTER[at0039] occurrences matches {0..*} matches {    -- Frequency
								include
									archetype_id/value matches {/.*|openEHR-EHR-CLUSTER\.timing_daily\.v1|openEHR-EHR-CLUSTER\.timing_nondaily\.v1/}
							}
							allow_archetype CLUSTER[at0038] occurrences matches {0..*} matches {    -- Adverse reaction/Side effect
								include
									archetype_id/value matches {/.*/}
							}
							ELEMENT[at0042] occurrences matches {0..1} matches {    -- Complications
								value matches {
									DV_CODED_TEXT matches {*}
								}
							}
						}
					}
					allow_archetype ELEMENT[at0037] occurrences matches {0..1} matches {    -- Clinician
						include
							archetype_id/value matches {/.*/}
					}
					ELEMENT[at0043] occurrences matches {0..1} matches {    -- Patient Status
						value matches {
							DV_CODED_TEXT matches {*}
						}
					}
				}
			}
		}
	}

